<!DOCTYPE html>
<html>
  <%- include('../includes/head', {title: title}); %>
  <body>
    <%- include('../includes/header', {title: title})%>
    <div class="container">
    	<div class="row">
    		<% movies.forEach(function(item) { %>
				<div class="col-md-2">
					<div class="thumbnail">
						<a href="/detail/<%= item.id %>">
							<img src="<%= item.poster %>" alt="<%= item.title %>">
						</a>
						<div class="caption">
							<h3><%= item.title %></h3>
							<p>
								<a href="/detail/<%= item.id %>" role="button" class="btn btn-primary">观看预告片</a>
							</p>
						</div>
					</div>
				</div>
    		<%	}) %>
    	</div>
    </div>
  </body>
</html>
