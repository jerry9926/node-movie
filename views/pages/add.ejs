<!DOCTYPE html>
<html>
  <%- include('../includes/head', {title: title})%>
  <body>
    <%- include('../includes/header', {title: title})%>
    <div class="container">
    	<div class="row">
    		<form action="/admin/movie/new" method="post" class="form-horizontal">
                <input type="hidden" name="movie[_id]" value="<%= movie._id%>">
    			<div class="form-group">
    				<label for="inputTitle" class="col-sm-2 control-label" >电影名字</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputTitle" class="form-control" name="movie[title]" value="<%= movie.title%>">
    				</div>
    			</div>
    			<div class="form-group">
    				<label for="inputDirector" class="col-sm-2 control-label" >导演</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputDirector" class="form-control" name="movie[director]" value="<%= movie.director%>">
    				</div>
    			</div>
    			<div class="form-group">
    				<label for="inputCountry" class="col-sm-2 control-label" >国家</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputCountry" class="form-control" name="movie[country]" value="<%= movie.country%>">
    				</div>
    			</div>
    			<div class="form-group">
    				<label for="inputLanguage" class="col-sm-2 control-label" >语言</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputLanguage" class="form-control" name="movie[language]" value="<%= movie.language%>">
    				</div>
    			</div>
    			<div class="form-group">
    				<label for="inputPoster" class="col-sm-2 control-label" >海报地址</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputPoster" class="form-control" name="movie[poster]" value="<%= movie.poster%>">
    				</div>
    			</div>
    			<div class="form-group">
    				<label for="inputYear" class="col-sm-2 control-label" >上映年份</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputYear" class="form-control" name="movie[year]" value="<%= movie.year%>">
    				</div>
    			</div>
    			<div class="form-group">
    				<label for="inputSummary" class="col-sm-2 control-label" >简介</label>
    				<div class="col-sm-10">
    					<input type="text" id="inputSummary" class="form-control" name="movie[summary]" value="<%= movie.summary%>">
    				</div>
    			</div>
                <div class="form-group">
                    <label for="inputFalsh" class="col-sm-2 control-label" >地址</label>
                    <div class="col-sm-10">
                        <input type="text" id="inputFalsh" class="form-control" name="movie[falsh]" value="<%= movie.falsh%>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" >
                    </label>
                    <div class="col-sm-2">
                        <input type="submit" class="form-control" value="提交">
                    </div>
                </div>
    		</form>
    	</div>
    </div>
  </body>
</html>